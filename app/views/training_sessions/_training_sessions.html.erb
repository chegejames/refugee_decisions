<%set_meta_tags :nofollow => true%>
<ul class="breadcrumb">
        <li><%= link_to @training.name, @training%> <span class="divider">/</span></li>
    <li class="active">Training sessions</li>
   </ul>
<table class="table table-striped table-bordered table-hover table-condensed">
  <tr>
    <th><%= sort_link @search, :start_date, "Start of training"%></th>
     <th><%= sort_link @search, :end_date, "End of training"%></th>
   <th><%= sort_link @search, :location, "Location of training"%></th>
    <th></th>

  </tr>

<% @training_sessions.each do |training_session| %>
  <tr>
       <td><%= training_session.start_date %></td>
      <td><%= training_session.end_date %></td>
       <td><%= training_session.location%></td>
       <td><%= link_to "view participants", participants_training_path(@training, :start_date => training_session.start_date, :end_date =>  training_session.end_date, :location => training_session.location) , class: "btn btn-primary btn-small"%></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @training_sessions, class: "pagination"%>
