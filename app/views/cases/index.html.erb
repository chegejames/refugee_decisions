<h3>Decision matters on refugees</h3>
<div class="row-fluid">
<div class="span3">
<%= render "search"%>
</div>
<div class="span9">
<% @cases.each do |cases| %>
  <article class="hero-unit">
    <% if cases.cause.category == "criminal"%>
     <p class="parties"><%= cases.state.upcase %> vs. <%= cases.accused.upcase %></p>
    <%else%>
     <p class="parties"><%= cases.complainant.upcase.html_safe %> v. <%= cases.defendant.upcase.html_safe %></p>
    <%end%>
    <p>
       <span>Judge:</span>
       <%= cases.judge.name%></p>
    <p><span>Cause:</span> <%= cases.cause.name + " - " + cases.cause.category%></p>
    <p><span>Case Number:</span> <%= cases.case_number %></p>
    <p><span>Delivery Date:</span> <%= cases.year_of_judgement %></p>
    <p><span>Court:</span> <%= cases.court %></p>
    <p><%= truncate(cases.summary_of_decision, length: 200).html_safe %></p>
    <p class="pull-right"><%= link_to 'Read more', cases, class: "btn btn-primary" %> <%= link_to "Edit", edit_case_path(cases), class: "btn btn-warning" %>
    <%= link_to 'Destroy', cases, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></p>
  </article>
<% end %>

<br />
<%= will_paginate @members, class: "pagination"%>
</div>
</div>

