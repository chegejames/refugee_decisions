<p id="notice"><%= notice %></p>
<div class="row-fluid" id="cases">
	<div class="span12 offset10">
		<%= social_share_button_tag(@case.cause.name , :image => 'assets/kmja_logo.png', :'data-type' => 'photo' %>
		</div>
<article class="case">
<% if @case.cause.category == "criminal"%>
     <h3><%= @case.state.upcase %> vs. <%= @case.accused.upcase %></h3>
     <% content_for :title do%>
       <<%= @case.state.upcase %> vs. <%= @case.accused.upcase %>
     <%end%>
    <%else%>
     <h3><%= @case.complainant.upcase %> vs. <%= @case.defendant.upcase %></h3>
     <% content_for :title do%>
       <%= @case.complainant.upcase.html_safe %> vs. <%= @case.defendant.upcase.html_safe %>
     <%end%>
<%end%>
    <article class="row-fluid">
    <p class="span4"><span>Case Number:</span> <%= @case.case_number %></p>
    <p class="span4"><span>Delivery Date:</span> <%= @case.year_of_judgement %></p>
    <p class="span4"><span>Court:</span> <%= @case.court %></p>
    </article>
    <p><span>Cause:</span><%= @case.cause.name + " - " + @case.cause.category%></p>
    <p><span>Judge:</span><%= @case.judge.name%></p>

<p>
  <%= @case.summary_of_decision.html_safe %>
</p>
<p>
  <%= image_tag "pdf.png"%>
  <%= link_to "download full judgement", @case.pdf.url%>
</p>
<%= link_to 'Edit', edit_case_path(@case), class: "btn" %> |
<%= link_to 'Back', cases_path, class: "btn"%>
</article>
</div>
